          },
          "massege": {
            "type": "string",
            "example": "successful operation"
          }
        }
      },
      "wrong_community_id": {
        "type": "object",
        "properties": {
          "massege_id": {
            "type": "integer",
            "example": 12345
          },
          "massege": {
            "type": "string",
            "example": "wrong community id"
          }
        }
      },
      "wrong_user_id": {
        "type": "object",
        "properties": {
          "massege_id": {
            "type": "integer",
            "example": 12345
