    "/willing_users": {
      "get": {
        "tags": [
          "online"
        ],
        "summary": "Get users that are willing to assist on a message",
        "operationId": "willing_users",
        "description": "Get users that are willing to assist on a message",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "thread_ID",
            "description": "Message thread ID",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Willing User IDs",
            "schema": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          }
        }
      }
    },
    "/sort_willing_users": {
      "post": {
        "tags": [
          "online"
        ],
        "summary": "Returns a sorted list of Users that are willing to assist on a message",
        "description": "Returns a sorted list of Users that are willing to assist on a message",
        "parameters": [
          {
            "in": "query",
            "name": "UID",
            "description": "User ID",
            "required": true,
            "type": "integer"
          },
          {
            "in": "query",
            "name": "msg_ID",
            "description": "Message ID",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Sorted Willing User IDs",
            "schema": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          }
        }
      }
    },
    "/suggest_friends": {
      "post": {
        "tags": [
          "online"
        ],
        "summary": "Returns a sorted list of Users that are suggested to be added as friends",
        "description": "Returns a sorted list of Users that are suggested to be added as friends",
        "parameters": [
          {
            "in": "query",
            "name": "UID",
            "description": "User ID",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Sorted a List of User IDs to be suggested as friends",
            "schema": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "user_profile": {
      "type": "object",
      "description": "User Profile Personal Information. What is filled by user.",
      "properties": {
        "user_id": {
          "type": "string",
          "description": "User ID a unique identifier"
        },
        "age": {
          "type": "integer",
          "description": "User Age (required)."
        },
        "sex": {
          "type": "integer",
          "enum": [
            "male",
            "female",
            "other?"
          ],
          "description": "User Biological Sex (required)."
        },
        "languages": {
          "description": "A list of user known languages (required 1 min).",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Language Name."
              },
              "iso_code": {
                "type": "string",
                "description": "Langugage ISO code."
              },
              "level": {
                "type": "integer",
                "description": "User Proficiency of Language."
              }
            }
          }
        },
        "occupation": {
          "description": "Users main occupation (optional).",
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "Occupation Title: student, alumni, employee."
            },
            "program": {
              "type": "object",
              "description": "University related program."
            }
          }
        },
        "competences": {
          "description": "A list with user competences and skill level (optional).",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Competence name. Example: cooking, driving etc."
              },
              "level": {
                "type": "integer",
                "description": "User level."
              }
            }
          }
        },
        "places": {
          "description": "User different locations (optional).",
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "other": {
          "type": "object",
          "description": "All user related information that we can get!"
        }
      }
    },
    "user_metadata": {
      "type": "object",
      "description": "User Profile Personal Information. What is filled by user.",
      "properties": {
        "user_id": {
          "type": "string",
          "description": "User ID"
        },
        "app_usage": {
          "type": "array",
          "description": "Application Usage History",
          "items": {
            "type": "object"
          }
        },
        "external_app_usage": {
          "type": "array",
          "description": "Other Applications that can be monitored?",
          "items": {
            "type": "object"
          }
        },
        "loc_history": {
          "type": "array",
          "description": "User Visited locations",
          "items": {
            "type": "object",
            "properties": {
              "latitude": {
                "type": "integer"
              },
              "longtitude": {
                "type": "integer"
              },
              "poi": {
                "type": "object",
                "description": "The google pin/business or something"
              }
            }
          }
        },
        "other": {
          "type": "object",
          "description": "Whatever other useful information we can get?"
        }
      }
    },
    "user_friends": {
      "type": "object",
      "description": "The list with the user friends",
      "properties": {
        "user_id": {
          "type": "string"
        },
        "friends": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "user_id": {
                "type": "string"
              },
              "status": {
                "type": "string",
                "description": "Current status, open to more suggestions here!",
                "enum": [
                  "added",
                  "removed",
                  "blocked",
                  "suggested",
                  "ignored_suggestion"
                ]
              }
            }
          }
        }
      }
    },
    "message_thread": {
      "type": "object",
      "description": "An ordered thread of messages",
      "properties": {
        "thread_id": {
          "type": "string",
          "description": "Thread ID"
        },
        "messages": {
          "type": "array",
          "description": "The messages in the thread",
          "items": {
            "$ref": "#/definitions/user_messages"
          }
        }
      }
    },
    "user_messages": {
      "type": "object",
      "description": "User messages.",
      "properties": {
        "msg_id": {
          "type": "string",
          "description": "Message ID"
        },
        "user_id_from": {
          "type": "string",
          "description": "User ID of sending user"
        },
        "user_id_to": {
          "type": "string",
          "description": "User ID of receiving message (this is for private messages and can be null)"
        },
        "thread_id": {
          "type": "string",
          "description": "Message Thread ID (this message is public to all that have access to thread)"
        },
        "msg_type": {
          "type": "integer",
          "description": "Message Type"
        },
        "msg_text": {
          "type": "string",
          "description": "Message"
        },
        "other": {
          "type": "object",
          "description": "Other Message information"
        }
      }
    }
  },
